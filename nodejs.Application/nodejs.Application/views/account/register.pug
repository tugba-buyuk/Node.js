extends ../layouts/main-layout.pug

block content
    if errorMessage
        div.alert.alert-danger.col-sm-7 #{errorMessage}

    form(action="/register" method="POST")
        input(type='hidden' name='_csrf' value=`${csrfToken}`)
        .form-group.row
            label(for="name").col-sm-2.col-form-label Name
            .col-sm-5.pr-0
                input(type="text" id="name" name="name").form-control

        .form-group.row
            label(for="email").col-sm-2.col-form-label Email
            .col-sm-5.pr-0
                input(type="text" id="email" name="email").form-control
        
        .form-group.row
            label(for="password").col-sm-2.col-form-label Password
            .col-sm-5.pr-0
                input(type="password" id="password" name="password").form-control
        
        
        .form-group.row
            .col-sm-5.offset-sm-2 
                input(type="submit" value="Register").btn.btn-primary
