extends ../layouts/main-layout.pug

include ../mixins/createProduct.pug

block content
    .container
        .row.w-100
            //- .col-md-3
            //-     include ../includes/menu.pug

            .col-md-12
                include ../includes/slider.pug


                //- div(style="padding-top: 50px;").row.w-100
