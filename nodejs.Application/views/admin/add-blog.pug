extends ../layouts/admin-layout.pug

block content      
    form(action="/admin/add-blog" method="POST" enctype='multipart/form-data').d-flex.flex-column
        input(type='hidden' name='_csrf' value=`${csrfToken}`)
        .form-group.d-flex.flex-row
            label(for="name").col-sm-2.col-form-label Title
            .col-sm-8
                input(type="text" id="title" name="title").form-control
        
        .form-group.d-flex.flex-row
            label(for="image").col-sm-2.col-form-label Image
            .col-sm-8
                input(type="file" id="image" name="image").form-control-file
        
        .form-group.d-flex.flex-row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-8
                 textarea(name="description", cols="30", rows="10" id="editor").form-control
        
        
        .form-group.d-flex.flex-row
            .col-sm-10.offset-sm-2 
                input(type="submit" value="Save Blog").btn.btn-primary

        
        
block script 
    script(src='https://cdn.ckeditor.com/ckeditor5/41.3.1/classic/ckeditor.js')
    script(src='/js/script.js')